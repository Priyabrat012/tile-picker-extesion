{
    "name" : "color picker",
    "description" : "A color picker extension",
    "version": "1.0",
    "manifest_version" : 3,
    "background" : {
        "service-worker" : "background.js"
    },
    "permissions" : [
        "activeTab",
        "scripting",
        "storage"
    ],
    "action" : {
        "default_popup" : "popup.html"
    },
    "icons" : {
        "16" : "./color-picker.png",
        "32" : "./color-picker.png",
        "48" : "./color-picker.png"
    }
}

